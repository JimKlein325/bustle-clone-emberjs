<li>
  {{#link-to 'story-detail' story.id}}
  <div>
    <p><h3>{{story.headline}}</h3></p>
  </div>
  {{/link-to}}
  <button {{action 'delete' story}}>Delete</button>
  {{#if updateStoryForm}}
  <div>
    <form>
      <div class="form-group">
        <label for="headline">Headline</label>
        {{textarea cols="80" rows="1" value=headline id="headline" placeholder=story.headline}}
      </div>

      <div class="form-group">
        <label for="body">Body</label>
        {{textarea cols="80" rows="6" value=body id="body" placeholder=story.body}}
      </div>

      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author" placeholder=story.author}}
      </div>

      <div class="form-group">
        <label for="image">Image</label>
        {{input value=image id="image" placeholder=story.image}}
      </div>

      <div class="form-group">
        <label for="category">Category</label>
        {{input value=category id="category" placeholder=story.category}}
      </div>

      <button {{action 'update' story}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'updateStory'}}>Update</button>
{{/if}}
</li>
